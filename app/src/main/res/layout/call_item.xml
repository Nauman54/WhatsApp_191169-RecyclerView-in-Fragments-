<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="@color/teal_700"
    android:layout_marginBottom="5dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/teal_700"
            app:cardCornerRadius="200dp">

            <ImageView
                android:id="@+id/call_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_nauman"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/call_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nauman Ahmed"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/call_state"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/missedcall_icon"/>

            <TextView
                android:id="@+id/call_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Today, 11:33 am"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/call_show"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/call_icon"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            />

    </LinearLayout>

</LinearLayout>